<div id="<%= dom_id brewery %>">
  <%= link_to "List of breweries", breweries_path %>
  <hr>
  <h2>
    <%= brewery.name %>
  </h2>
  <br>
  <p>Established in <i><%= brewery.year %></i></p>
  <br>
  <p>
    Beer count: <%= brewery.beers.count %>
  </p>
  <br>
  <p>
    <% brewery.beers.each do |beer| %>
      <%= link_to beer.name, beer %>
    <% end %>
  </p>
  <br>
  <p>Brewery has <%=pluralize(brewery.ratings.count, "rating")%> with an average of <%= brewery.average %></p>
  <br>
</div>
