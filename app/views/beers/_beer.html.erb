<div id="<%= dom_id beer %>">
  <p>
    <strong>Name:</strong>
    <%=link_to beer.name, beer %>
  </p>
  <p>
    <strong>Brewery: </strong><%=link_to beer.brewery.name, beer.brewery %>
  </p>
  <p>
    <strong>Style:</strong>
    <%= beer.style %>
  </p>
  <%if  beer.ratings.any? %>
    <p>Beer has <%= pluralize(beer.ratings.count, "rating") %> with an average of <%= beer.average %> </p>
  <% else %>
    <p>No ratings yet</p>
  <% end %>
</div>
